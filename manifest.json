{
    "name": "Vk_alert",
    "description" : "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,

    "content_scripts": [{
      "matches": ["https://vk.com/*"],
      "js": ["jquery.js","contentScript_jq.js"]
  }],
    
    "background": {
    "scripts": ["jquery.js","background.js"],
    "persistent": false
  },

    "browser_action": {
        "default_popup": "popup.html"
  },

    "permissions": [
        "https://api.vk.com/*",
        "cookies",
        "http://127.0.0.1:5000/*",
        "https://imv4.vk.com/*"
        ]
}
